<Window x:Class="Client.Window3"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Client;assembly=Client"
        mc:Ignorable="d"
        Title="Window3" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="333*"/>
            <RowDefinition Height="101*"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="57*"/>
            <ColumnDefinition Width="23*"/>
        </Grid.ColumnDefinitions>


        <TextBlock x:Name="ChatRoomNameTextBlock" Grid.Column="0" Text="Chat Room Name" FontWeight="Bold" FontSize="18" Height="50" Margin="10,10,10,0" VerticalAlignment="Top"/>

        <ListView Grid.Column="0" Name="chatRoomListView" Margin="10,50,10,13">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Messages" Width="500">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Width="Auto">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding MessageType}" Value="File">
                                                    <Setter Property="Foreground" Value="Blue" />
                                                    <Setter Property="TextDecorations" Value="Underline" />
                                                    <!-- <EventSetter Event="PreviewMouseLeftButtonDown" Handler="FileMessage_Click" /> This is the line that SHOULD make file messages clickable, however it crashed no matter what I try -->
                                                    <!-- I did some research and saw a few posts saying it was somethign to do with EventSetter not working properly when inside of a Style, but I don't know how to do it outside of a style (i tried) -->
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding MessageType}" Value="Text">
                                                    <Setter Property="Foreground" Value="Black" />
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                    <TextBlock.Text>
                                        <Binding Path="MessageText" />
                                    </TextBlock.Text>
                                </TextBlock>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                </GridView>
            </ListView.View>
        </ListView>

        <ListView Grid.Column="1" Name="privateMessagesListView" Margin="10,188,10,60" >
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Private Messages" Width="800" />
                </GridView>
            </ListView.View>
        </ListView>

        <TextBox x:Name="MessageTextBox" Grid.Column="0" Margin="10,0,106,60" TextWrapping="Wrap" Text="Enter message..." VerticalAlignment="Bottom" Height="54"/>
        <TextBox x:Name="PrivateTextBox" Grid.Column="1" TextWrapping="Wrap" Text="Enter Message..." VerticalAlignment="Top" Height="45" Margin="10,379,53,0"/>

        <Button x:Name="UploadFileButton" Grid.Column="0" Content="Upload File" HorizontalAlignment="Right" Margin="0,0,454,30" VerticalAlignment="Bottom" Height="27" Width="106" Click="UploadFileButton_Click"/>
        <Button x:Name="SendButton" Grid.Column="0" Content="Send" HorizontalAlignment="Right" Margin="0,0,10,60" VerticalAlignment="Bottom" Height="54" Width="106" Click="SendButton_Click"/>
        <Button x:Name="ChatRefreshButton" Grid.Column="0" Content="Refresh Chat" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,369,30" Height="25" Click="ChatRefreshButton_Click"/>
        <Button x:Name="UserRefreshButton" Content="RefreshUsers" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,275,30" Height="25" Click="UserRefreshButton_Click" />
        <Button x:Name="PrivateSendButton" Grid.Column="1" Content="Send" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,10,10" Height="45" Width="38" Click="PrivateSendButton_Click"/>

        <TextBlock x:Name="UsersTextBlock" Grid.Column="1" Text="Users" FontWeight="Bold" FontSize="18" Height="50" Margin="10,10,10,0" VerticalAlignment="Top"/>

        <ListView Grid.Column="1" Name="userListView" Margin="10,50,10,256">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Username" Width="150"/>
                    <GridViewColumn Width="Auto">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <Button Content="Private Message" Click="PrivateMessageButton_Click"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                </GridView>
            </ListView.View>
        </ListView>
        <Button Content="Leave Room" Click="LeaveRoomButton_Click" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="10,0,0,10"/>
    </Grid>

</Window>
